<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Карточка баланса -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Баланс"
            android:textColor="#B2DFE4DD"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.0 ₽"
            android:textColor="#DFE4DD"
            android:textSize="32sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Пространство для будущего списка (RecyclerView) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#201B211D"
        android:visibility="visible"/>

    <!-- Панель кнопок внизу -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:layout_marginTop="16dp">

        <!-- Кнопка дохода -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_add_income"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/button_circle_background"
                android:src="@drawable/add_circle_48px"
                android:scaleType="centerInside"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Доход"
                android:textColor="#DFE4DD"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Кнопка расхода -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_add_expense"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/button_circle_background"
                android:src="@drawable/do_not_disturb_on_48px"
                android:scaleType="centerInside"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Расход"
                android:textColor="#DFE4DD"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Кнопка истории -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_history"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/button_circle_background"
                android:src="@drawable/history_48px"
                android:scaleType="centerInside"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="История"
                android:textColor="#DFE4DD"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Кнопка статистики -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_stats"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/button_circle_background"
                android:src="@drawable/data_usage_48px"
                android:scaleType="centerInside"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Статистика"
                android:textColor="#DFE4DD"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>